<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Villafjordhoej._View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:_ViewModel="using:Villafjordhoej._ViewModel"
    x:Class="Villafjordhoej._View.Forside"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="#FFB9CA95">
            <Grid.DataContext>
                <_ViewModel:VM_Forside/>
            </Grid.DataContext>

            <Button x:Name="NPBooking" Content="Booking" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="58,49,0,0" Height="200" Width="300" FontSize="50" FontFamily="Arial" Foreground="#FF282828" BorderBrush="{x:Null}" Visibility="{Binding BookingKnapULoginVisibility}">
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Click">
                        <Core:NavigateToPageAction TargetPage="Villafjordhoej._View.V_Booking"/>
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/Gui_Forside_KnapGrøn_Temp.png"/>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Page>
