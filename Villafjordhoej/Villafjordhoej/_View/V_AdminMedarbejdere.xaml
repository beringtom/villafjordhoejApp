<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Villafjordhoej._View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:_ViewModel="using:Villafjordhoej._ViewModel"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="Villafjordhoej._View.V_AdminMedarbejdere"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="#FF494949">
            <Grid.DataContext>
                <_ViewModel:VM_AdminMedarbejdere/>
            </Grid.DataContext>
            <Button x:Name="Opret_Bruger" Content="Opret&#xD;&#xA;Bruger" HorizontalAlignment="Left" Margin="436,245,0,0" VerticalAlignment="Top" Height="59" Width="120" Background="#33FFFFFF"/>
            <Button x:Name="Slet_Bruger" Content="Slet&#xD;&#xA;Bruger" HorizontalAlignment="Left" Margin="592,245,0,0" VerticalAlignment="Top" Background="#33FFFFFF" Height="59" Width="107"/>
            <ListView x:Name="listView" HorizontalAlignment="Left" Height="552" Margin="49,76,0,0" VerticalAlignment="Top" Width="329" Background="#33FFFFFF" ItemsSource="{Binding MedarbejderSingleton}"/>
            <TextBox x:Name="Navn" HorizontalAlignment="Left" Margin="436,76,0,0" TextWrapping="Wrap" Text="{Binding Name, Mode=TwoWay}" VerticalAlignment="Top" Height="38" Width="263" PlaceholderText="Navn"/>
            <TextBox x:Name="Password" HorizontalAlignment="Left" Margin="436,150,0,0" TextWrapping="Wrap" Text="{Binding Password, Mode=TwoWay}" VerticalAlignment="Top" Height="38" Width="263" PlaceholderText="Kodeord"/>
        </Grid>
    </Grid>
</Page>

