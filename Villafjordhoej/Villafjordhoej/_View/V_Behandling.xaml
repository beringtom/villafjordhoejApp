<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Villafjordhoej._View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:_ViewModel="using:Villafjordhoej._ViewModel"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" 
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="Villafjordhoej._View.V_Behandling"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid x:Name="Baggrunds_Grid" 
              Background="#FF303030">
            <Grid.DataContext>
                <_ViewModel:VM_Behandling/>
            </Grid.DataContext>

            <ListView x:Name="Bookings" 
                      HorizontalAlignment="Left" 
                      Height="603" 
                      Margin="58,49,0,0" 
                      VerticalAlignment="Top" 
                      Width="368" 
                      Background="#33FFFFFF" 
                      ItemsSource="{Binding BehandlingSingleton.Bookings}" 
                      SelectedIndex="{Binding BehandlingSingleton.Index}"/>

            <ListView x:Name="Behandlinger" 
                      HorizontalAlignment="Left" 
                      Height="603"
                      Margin="860,49,0,0" 
                      VerticalAlignment="Top" 
                      Width="365" 
                      ItemsSource="{Binding BehandlingSingleton.Behandlings}" 
                      Background="#33FFFFFF"/>

            <Button x:Name="Forsiden" 
                    Content="Forside" 
                    HorizontalAlignment="Left" 
                    Margin="470,568,0,0" 
                    VerticalAlignment="Top" 
                    Height="84" 
                    Width="151" 
                    Background="#33FFFFFF">
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Click">
                        <Core:NavigateToPageAction TargetPage="Villafjordhoej._View.Forside"/>
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </Button>

            <Button x:Name="NPOpretBehandling" 
                    Content="Tilføj&#xD;&#xA;Behandling" 
                    HorizontalAlignment="Stretch" 
                    Margin="666,568,467,68" 
                    VerticalAlignment="Stretch" 
                    Background="#33FFFFFF">
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Click">
                        <Core:NavigateToPageAction TargetPage="Villafjordhoej._View.V_ROSBehandling"/>
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </Button>

        </Grid>

    </Grid>
</Page>
